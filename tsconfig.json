{
  "compileOnSave": false,
  "compilerOptions": {
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "lib": [
      "es2020",
      "dom"
    ],
    // "typeRoots": [
    //   "node_modules/@types"
    // ],
    "useDefineForClassFields": false
  }
}
